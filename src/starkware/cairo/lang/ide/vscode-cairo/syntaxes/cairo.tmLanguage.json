{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Cairo",
	"patterns": [
		{
			"name": "meta.function.cairo",
			"begin": "\\b(func)\\s+",
			"beginCaptures": {
				"1": {
					"name": "storage.type.function.cairo"
				}
			},
			"patterns": [
				{
					"include": "#function-scope"
				},
				{
					"include": "source.cairo"
				}
			],
			"end": "\\b(end)\\b",
			"endCaptures": {
				"1": {
					"name": "storage.type.function.end.cairo"
				}
			}
		},
		{
			"name": "comment.line.number-sign.cairo",
			"match": "#[^\n]*\n"
		},
		{
			"name": "constant.numeric.decimal.cairo",
			"match": "\\b([0-9]+)\\b"
		},
		{
			"name": "constant.numeric.hexadecimal.cairo",
			"match": "\\b(0x[a-fA-F0-9]+)\\b"
		},
		{
			"name": "string.quoted.double",
			"match": "\\B(\"\\w*\")\\B"
		}
	],
	"repository": {
		"parameter": {
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?::\\s*([a-zA-Z_][a-zA-Z0-9_*]*))\\b",
			"captures": {
				"1": {
					"name": "variable.parameter.cairo"
				},
				"2": {
					"patterns": [
						{
							"include": "#types"
						}
					]
				}
			}
		},
		"implicit-parameter": {
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?::\\s*([a-zA-Z_][a-zA-Z0-9_*]*))\\b",
			"captures": {
				"1": {
					"name": "variable.parameter.implicit.cairo"
				},
				"2": {
					"patterns": [
						{
							"include": "#types"
						}
					]
				}
			}
		},
		"types": {
			"patterns": [
				{
					"name": "support.type.primitive.cairo",
					"match": "(felt\\*?)"
				}
			]
		},
		"function-scope": {
			"patterns": [
				{
					"name": "meta.function.signature",
					"begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=[{(])",
					"beginCaptures": {
						"1": {
							"name": "entity.name.function.cairo"
						}
					},
					"patterns": [
						{
							"name": "meta.parameter.implicit.cairo",
							"begin": "{",
							"patterns": [
								{
									"include": "#implicit-parameter"
								}
							],
							"end": "}"
						},
						{
							"name": "meta.parameter.cairo",
							"begin": "\\(",
							"patterns": [
								{
									"include": "#parameter"
								}
							],
							"end": "\\)"
						}
					],
					"end": "\\B(:)",
					"endCaptures": {
						"1": {
							"name": "meta.function.definition.end.cairo"
						}
					}
				},
				{
					"name": "storage.type.cairo",
					"match": "\\b(let|tempvar|local)\\b"
				},
				{
					"name": "keyword.control.other.cairo",
					"match": "\\b(end)\\b"
				},
				{
					"name": "keyword.control.conditional.cairo",
					"match": "\\b(if|else)\\b"
				},
				{
					"name": "keyword.control.flow.cairo",
					"match": "\\b(return|ret)\\b"
				},
				{
					"name": "support.constant.cairo",
					"match": "\\b(SIZEOF_LOCALS|SIZE)\\b"
				},
				{
					"name": "support.variable.cairo",
					"match": "\\b(ap|fp)\\b"
				},
				{
					"begin": "%{",
					"beginCaptures": {
						"0": {
							"name": "punctuation.section.embedded.begin.python"
						}
					},
					"end": "%}",
					"endCaptures": {
						"0": {
							"name": "punctuation.section.embedded.end.python"
						},
						"1": {
							"name": "source.python"
						}
					},
					"name": "meta.embedded.block.python",
					"contentName": "source.python",
					"patterns": [
						{
							"include": "source.python"
						}
					]
				}
			]
		}
	},
	"scopeName": "source.cairo"
}